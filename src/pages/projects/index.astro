---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
const project = await getCollection("project");
const projectCard = await getCollection("projectCards")
---

<Layout title="Resume07 | Project">
  <div class="mx-auto p-3 md:p-6 lg:p-12">
    <div class="">
      <div class="-mx-3 -mt-3 md:m-0">
        <div
          class="bg-gradient-to-b from-omega-800 to-omega-800 p-6 pb-2 md:bg-none md:p-0 prose prose-invert text-omega-800"
        >
          <h3
            class="text-white leading-[1.1]"
          >
            {project[0]?.data?.text1}
          </h3>
        </div><div
          class="h-px w-full bg-gradient-to-r from-accent via-beta to-alpha md:bg-none"
        >
        </div>
      </div><p class="prose prose-invert my-[1.25em] leading-7">
        {project[0]?.data?.text2}
      </p><div
        class="mt-4 grid grid-cols-fluid gap-4 [--tw-fluid-col-min:15rem] md:mt-12 md:gap-6"
      >
      </div><div class="my-6 md:my-12"></div><div class="-mx-3 -mt-3 md:m-0">
        <div
          class="bg-gradient-to-b from-omega-800 to-omega-800 p-6 pb-2 md:bg-none md:p-0 prose prose-invert"
        >
          <h3>
            {project[0]?.data?.text3}
        </h3>
        </div><div
          class="h-px w-full bg-gradient-to-r from-accent via-beta to-alpha md:bg-none"
        >
        </div>
      </div><p class="prose prose-invert my-[1.25em] text-[1.125rem] leading-7">
        {project[0]?.data?.text4}
      </p><div class="mt-4 grid gap-4 md:mt-12 md:gap-6">
        {projectCard?.map((ele) =>{
          return(
          <div
          aria-label={ele?.data?.title}
          class="group grid items-center transition-all duration-200 md:grid-cols-2 md:gap-10 dark:bg-gradient-omega-900 dark:md:shadow-lg"
        >
          <a
            aria-label={ele?.data?.title}
            class="not-prose relative block h-80 w-full p-4"
            href={`projects/${ele?.slug}`}
            ><div
              class="relative overflow-hidden h-full w-full transition-transform md:group-hover:scale-105 duration-300 ease-out"
            >
              <div
                class="absolute left-0 top-0 z-10 hidden h-full w-[120%] bg-omega-900 origin-bottom skew-x-6 transform-gpu transition-transform duration-700 md:block -translate-x-full"
              >
              </div><img
                alt="main-img"
                sizes="(min-width: 768px) 540px, 100vw"
                src={ele?.data?.image}
                decoding="async"
                data-nimg="fill"
                class="md:transform-gpu md:transition-all md:duration-700 object-contain object-left"
                style="position: absolute; height: 100%; width: 100%; inset: 0px; color: transparent;"
              />
            </div><div class="absolute top-0 right-4 z-10 h-full w-full">
              <div
                class="relative overflow-hidden h-full w-full transition-transform md:group-hover:scale-105 origin-right duration-500 ease-out drop-shadow-2xl"
              >
                <div
                  class="absolute left-0 top-0 z-10 hidden h-full w-[120%] bg-omega-900 origin-bottom skew-x-6 transform-gpu transition-transform duration-700"
                >
                </div><img
                  alt="mobile-img"
                  sizes="(min-width: 768px) 540px, 100vw"
                  src={ele?.data?.responsiveImage}
                  decoding="async"
                  data-nimg="fill"
                  class="md:transform-gpu md:transition-all md:duration-700 object-contain object-right"
                  style="position: absolute; height: 100%; width: 100%; inset: 0px; color: transparent;"
                />
              </div>
            </div></a><div class="p-4 md:p-10 md:pl-0">
            <div class="h-10">
              <img src={ele?.data?.companyLogo} class="h-full w-36 fill-current text-omega-400" alt="img" />
            </div>
            <a
            href={`projects/${ele?.slug}`}
              aria-label={ele?.data?.title}
              >
              <h4
                class="mt-6 transition-colors prose prose-invert text-[1.875rem] leading-9 font-black group-hover:text-accent dark:group-hover:text-alpha"
              >
                {ele?.data?.title}
              </h4>
              </a>
              <small class="mt-6 block text-[1rem] text-white"
              >{ele?.data?.frontText}</small><dl class="mt-2 flex flex-wrap">
              {ele?.data?.projectConfig?.map((element) =>{
                return(
                <div class="basis-1/2 py-2">
                <dt class="mb-1 font-bold dark:text-accent-400">{element?.key}</dt><dd
                  class="text-white"
                >
                {element?.value}
                </dd>
              </div>
                )
              })}
            </dl>
          </div>
        </div>
          );
        })}        
      </div>
    </div>
  </div>
</Layout>
